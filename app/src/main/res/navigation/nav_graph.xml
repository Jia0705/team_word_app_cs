<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.team.wordsapp_casestudy.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_addWordFragment"
            app:destination="@id/addWordFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />

        <action
            android:id="@+id/action_homeFragment_to_completedFragment"
            app:destination="@id/completedFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <!-- Add -->
    <fragment
        android:id="@+id/addWordFragment"
        android:name="com.team.wordsapp_casestudy.ui.manage.add.AddWordFragment"
        android:label="fragment_add_word"
        tools:layout="@layout/fragment_add_word" />

    <!-- Edit -->
    <fragment
        android:id="@+id/editWordFragment"
        android:name="com.team.wordsapp_casestudy.ui.manage.edit.EditWordFragment"
        android:label="fragment_edit_word"
        tools:layout="@layout/fragment_edit_word">

        <argument
            android:name="word_id"
            app:argType="integer" />
    </fragment>

    <!-- Detail -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.team.wordsapp_casestudy.ui.manage.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">

        <argument
            android:name="word_id"
            app:argType="integer" />

        <action
            android:id="@+id/action_detailFragment_to_editWordFragment"
            app:destination="@id/editWordFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>

    <!-- Completed -->
    <fragment
        android:id="@+id/completedFragment"
        android:name="com.team.wordsapp_casestudy.ui.manage.completed.CompletedFragment"
        android:label="fragment_completed"
        tools:layout="@layout/fragment_completed" />
</navigation>
